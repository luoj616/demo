<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="demo.luojun.com.demo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".context.MyAppliction"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.networkactivity.NetworkActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.networkactivity.OkhttpActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.viewactivity.WidgetActivity" />
        <activity android:name=".activity.viewactivity.MotionEventActivity" />
        <activity
            android:name=".activity.viewactivity.SimpleLayoutActivity"
            android:label="@string/title_activity_simple_layout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.viewactivity.TitleActivity"
            android:label="@string/title_activity_simple_layout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.viewactivity.MyListviewActivity"></activity>
    </application>

</manifest>