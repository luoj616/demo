<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="demo.luojun.com.demo.activity.java.design.DesignActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/singleton_bt"
        android:layout_marginTop="20dp"
        android:text="单利模式-singleton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/simple_factory_bt"
        android:layout_marginTop="20dp"
        android:text="工厂模式-simpleFactory"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/build_bt"

        android:layout_marginTop="20dp"
        android:text="建造者设计模式：build"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/proxy_bt"
        android:layout_marginTop="20dp"
        android:text="代理设计模式 proxy"/>


</LinearLayout>
