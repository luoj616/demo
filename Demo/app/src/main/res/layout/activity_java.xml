<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="demo.luojun.com.demo.activity.java.JavaActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/design_bt"
        android:layout_marginTop="20dp"
        android:text="设计模式——design"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/file_io_bt"
        android:layout_marginTop="20dp"
        android:text="文件流-file_io"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/class_bt"
        android:layout_marginTop="20dp"
        android:text="反射-class"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/annotation_bt"
        android:layout_marginTop="20dp"
        android:text="注解-annotataion"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/javapoet_bt"
        android:layout_marginTop="20dp"
        android:text="代码生成jar-javapoet"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/generics_bt"
        android:layout_marginTop="20dp"
        android:text="泛型-Generics"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/rxjava_bt"
        android:layout_gravity="center_horizontal"
        android:text="rxjava" />

</LinearLayout>
