<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <demo.luojun.com.demo.widget.custom.CustomTitleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:image="@mipmap/ic_launcher"
        custom:imageScaleType="center"
        custom:titleText="3712"
          android:padding="30dp"
        custom:titleTextColor="#ff0000"
        custom:titleTextSize="40sp"/>
    <demo.luojun.com.demo.widget.custom.CustomProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="300dp"
        custom:speed="1"
        custom:circleWidth="20dp"
        custom:firstColor="#ff0000"
        custom:secondColor="#034567"
        />

</LinearLayout>
